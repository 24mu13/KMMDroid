<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#62B1F6">

    <TextView
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_gravity="left"
    	android:background="@drawable/titlelabel_background"
    	android:text="@string/titleSchedules"
    	android:id="@+id/titleSchedules"
    	android:textSize="25sp"
    	android:gravity="center_vertical"
    	android:textColor="@android:color/white"
    	android:paddingLeft="10sp"
    />
  <TableLayout
	  android:layout_width="match_parent"
	  android:layout_height="wrap_content">  
    <TableRow>
    	<TextView
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:gravity="center"
			android:text="@string/titlesrDescription"
			android:textColor="@android:color/black" />
    	<TextView
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:gravity="center"
			android:text="    "
			android:textColor="@android:color/black" />
    	<TextView
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:gravity="center"
			android:text="@string/titlesrPayee"
			android:textColor="@android:color/black" />
    </TableRow>
    <TableRow>
    	<TextView
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:gravity="center"
			android:text="@string/titlesrFrequency"
			android:textColor="@android:color/black" />
    	<TextView
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:gravity="center"
			android:text="    "
			android:textColor="@android:color/black" />
    	<TextView
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:gravity="center"
			android:text="@string/titlesrNextDueDate"
			android:textColor="@android:color/black" />
    	<TextView
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:gravity="center"
			android:text="    "
			android:textColor="@android:color/black" />
    	<TextView
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:gravity="center"
			android:text="@string/titlesrAmount"
			android:textColor="@android:color/black" />
    </TableRow>
   </TableLayout>
   	<!-- Layout for Transactions Listing Area -->
   	<ListView
   		android:layout_height="0dp"
   		android:layout_width="fill_parent"
   		android:layout_weight="8"
   		android:id="@+id/listSchedules"
    	android:background="#afff"
		android:cacheColorHint="#00000000"
   		android:layout_marginTop="10sp"
   		android:layout_marginLeft="10sp"
    	android:layout_marginRight="10sp"
   		android:layout_marginBottom="10sp">    
   	</ListView>
   	
   	<include
   	    layout="@layout/navigationbar"/>
</LinearLayout>
