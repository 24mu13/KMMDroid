<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:background="#62B1F6">
  
    <TextView
    	android:layout_width="wrap_content"
	   	android:layout_height="wrap_content"
    	android:layout_gravity="left"
	   	android:background="@drawable/titlelabel_background"
    	android:text="@string/titleFileChooser"
	   	android:textSize="25sp"
	   	android:gravity="center_vertical"
    	android:textColor="@android:color/white"
	   	android:paddingLeft="10sp" />

	<TextView 
		android:text="@+id/titleFCName" 
		android:id="@+id/titleFCName" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:singleLine="true" 
		android:textStyle="bold" 
		android:layout_marginTop="5dip" 
		android:layout_marginLeft="5dip">
	</TextView>
	
	<TextView 
		android:text="@+id/titleFCDescription" 
		android:id="@+id/titleFCDescription" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:layout_marginLeft="10dip">
	</TextView>

</LinearLayout>
