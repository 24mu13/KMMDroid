<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="#62B1F6">

    <TextView
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_gravity="left"
    	android:background="@drawable/titlelabel_background"
    	android:text="@string/titleReassignPayee"
    	android:textSize="25sp"
    	android:gravity="center_vertical"
    	android:textColor="@android:color/white"
    	android:paddingLeft="10sp"
    />
   	
    <TextView
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_gravity="left"
    	android:text="@string/summaryPayeeReassign"
    	android:textSize="12sp"
    	android:gravity="center_vertical"
    	android:textColor="@android:color/white"
    	android:paddingLeft="10sp"
    	android:paddingBottom="20sp"
    />
    
    <TextView
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_gravity="left"
    	android:text="@string/titlePayeesAvailable"
    	android:textSize="14sp"
    	android:gravity="center_vertical"
    	android:textColor="@android:color/white"
    	android:paddingLeft="10sp"
    	android:paddingBottom="10sp"
    />
    
    <Spinner 
    	android:layout_height="wrap_content" 
    	android:layout_width="fill_parent"
    	android:id="@+id/payeeAvailable"
    	android:layout_marginLeft="25sp"
    	android:layout_marginRight="25sp"
    />
    
    <LinearLayout 
    	android:orientation="horizontal"
    	android:gravity="center_horizontal|bottom"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent">
    		<Button 
    			android:text="@string/titleButtonOK"
    			android:id="@+id/buttonOk"
    			android:layout_width="fill_parent"
    			android:layout_height="wrap_content"
    			android:layout_weight="1"
    			android:enabled="false">
    		</Button>
    		<Button
    			android:text="@string/titleButtonCancel"
    			android:id="@+id/buttonCancel"
    			android:layout_width="fill_parent"
    			android:layout_height="wrap_content"
    			android:layout_weight="1">
     		</Button>
    </LinearLayout>
</LinearLayout>
